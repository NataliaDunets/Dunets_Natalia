@using grsu.dunec.project.Models
@model IList<Book>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3>Продажа книг</h3>
    <table>
        <tr class="header">
            <td><p>Название книги</p></td>
            <td><p>Автор</p></td>
            <td><p>Цена</p></td>
            <td><p>Тип</p></td>
            <td><p>Год издания</p></td>
            <td><p>Рейтинг книги</p></td>
        </tr>
        @foreach (var b in Model)
            {
            <tr>
                <td><p>@b.name</p></td>
                <td><p>@b.author</p></td>
                <td><p>@b.price</p></td>
                <td><p>@b.type</p></td>
                <td><p>@b.yearOfPublishing</p></td>
                <td><p>@b.rating</p></td>
                <td><p><a href="/Home/Buy/@b.id">Купить</a></p></td>
            </tr>
        }
    </table>
</div>